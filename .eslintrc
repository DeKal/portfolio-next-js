{
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "plugins": ["prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["./"]
      }
    },
    "react": {
      "version": "detect"
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
      "modules": true
    }
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false
      }
    ],
    "prefer-const": "error",
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],
    "react/prop-types": ["error"],
    "react/jsx-boolean-value": ["error", "never"],
    "dot-notation": ["error"],
    "no-unused-vars": [
      "error",
      { "args": "after-used", "ignoreRestSiblings": true }
    ],
    "object-shorthand": ["error", "always"],
    "jsx-a11y/href-no-hash": "off",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "styled-components",
            "message": "Please import from styled-components/macro."
          }
        ],
        "patterns": ["!styled-components/macro"]
      }
    ]
  }
}
