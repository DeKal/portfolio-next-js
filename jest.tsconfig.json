{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "lib": [
     "es2017",
     "dom"
    ],
    "typeRoots": [
     "node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "*"
      ]
    }
  },
   "exclude": [
    "node_modules",
    "out",
    ".next"
   ]
  }